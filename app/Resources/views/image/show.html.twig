{% extends 'base.html.twig' %}

{% block body %}
    <h1>Image</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Nomimage</th>
                <td>{{ image.nomImage }}</td>
            </tr>
            <tr>
                <th>Typeimage</th>
                <td>{{ image.typeImage }}</td>
            </tr>
            <tr>
                <th>Tailleimage</th>
                <td>{{ image.tailleImage }}</td>
            </tr>
            <tr>
                <th>Lienimage</th>
                <td>{{ image.lienImage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('image_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('image_edit', { 'id': image.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
